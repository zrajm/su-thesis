\newcommand*{\eachcite}[1]{%                   % remember each citation used
  \global\csdef{ZZ#1}{}%
}
\csdef{citation}#1{%                           % split \citeX argument on comma
  \forcsvlist{\eachcite}{#1}%
  \orgcitation{#1}%
}
\renewcommand{\bibitem}[2][]{%                 % set text color for bibitem
