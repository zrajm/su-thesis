  }{%
    \def\BBOQ{``}%    % opening quote before article names
  }%
  \def\BBCQ{''}%      % closing quote after article names
  \def\BPBI{.\,}%     % between initials
  \ifcsundef{ZZ#2}{%
    \typeout{FIXME: IN REFERENCES, BUT NOT CITED IN TEXT '#2'}%
    \color{gray}%
  }{}%
  \orgbibitem[#1]{#2}%
}
